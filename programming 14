#include <iostream>
using namespace std;

class Number {
private:
    int value;

public:
    Number(int v = 0) {  
        value = v;
    }

    void operator++() {
        ++value;
    }

    void display() {
        cout << "Value: " << value << endl;
    }
};

int main() {
    Number num(5);

    cout << "Before increment:" << endl;
    num.display();

    ++num;  

    cout << "After increment:" << endl;
    num.display();

    return 0;
}
