#include <iostream>
using namespace std;

// Function to calculate factorial with exception handling
unsigned long long factorial(int n) {
    if (n < 0)
        throw "Error: Factorial of a negative number doesn't exist.";
    if (n > 20)  // Limits factorial to 20 due to unsigned long long range
        throw "Error: Number too large to compute factorial safely.";

    unsigned long long fact = 1;
    for (int i = 1; i <= n; ++i) {
        fact *= i;
    }
    return fact;
}

int main() {
    int number;
    cout << "Enter an integer to find factorial: ";
    cin >> number;

    try {
        unsigned long long result = factorial(number);
        cout << "Factorial of " << number << " is " << result << endl;
    }
    catch (const char* msg) {
        cerr << msg << endl;
    }

    return 0;
}
